<!-- Edit Page (Only for logged-in users) -->
<section id="edit">
    <div class="form">
        <h2>Edit item</h2>
        <form class="edit-form" action="/stones/stoneId/edit" method="POST">
            <input type="text" name="name" id="name" placeholder="Name" value="Amethyst" />
            <input type="text" name="category" id="category" placeholder="Category" value="Silicate mineral" />
            <input type="text" name="color" id="color" placeholder="Color" value="Purple" />
            <input type="text" name="image" id="stone-img" placeholder="Image" value="https://m.media-amazon.com/images/I/71TIuyGllzS._AC_UF894,1000_QL80_.jpg" />
            <input type="text" name="location" id="location" placeholder="Location" value="Artigas, Uruguay" />
            <input type="text" name="formula" id="formula" placeholder="Formula" value="SiO2" />
            <textarea id="description" placeholder="Description..."
                name="">Amethyst is a violet variety of quartz. The name comes from the Koine Greek, a reference to the belief that the stone protected its owner from drunkenness. Ancient Greeks wore amethyst and carved drinking vessels from it in the belief that it would prevent intoxication. Amethyst, a semiprecious stone, is often used in jewelry.</textarea>

            <button type="submit">Edit</button>
        </form>
    </div>
</section>